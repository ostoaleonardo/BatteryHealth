        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Text.Card.Indicator" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/n_type82_headline</item>
        <item name="android:ellipsize">end</item>
